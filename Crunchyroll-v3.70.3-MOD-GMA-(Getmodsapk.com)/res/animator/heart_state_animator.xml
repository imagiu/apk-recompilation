<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:interpolator="@anim/heart_path_interpolator" android:duration="200" android:valueTo="0.85" android:valueType="floatType" android:propertyName="scaleX" />
            <objectAnimator android:interpolator="@anim/heart_path_interpolator" android:duration="200" android:valueTo="0.85" android:valueType="floatType" android:propertyName="scaleY" />
        </set>
    </item>
    <item android:state_selected="true">
        <set>
            <objectAnimator android:interpolator="@anim/heart_path_interpolator" android:duration="150" android:valueFrom="0" android:valueTo="1" android:valueType="floatType" android:propertyName="scaleX" />
            <objectAnimator android:interpolator="@anim/heart_path_interpolator" android:duration="150" android:valueFrom="0" android:valueTo="1" android:valueType="floatType" android:propertyName="scaleY" />
        </set>
    </item>
    <item android:state_selected="false">
        <set>
            <objectAnimator android:duration="0" android:valueTo="1" android:valueType="floatType" android:propertyName="scaleX" />
            <objectAnimator android:duration="0" android:valueTo="1" android:valueType="floatType" android:propertyName="scaleY" />
        </set>
    </item>
</selector>